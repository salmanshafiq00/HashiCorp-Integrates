@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">HashiCorp Vault Integration</h1>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h4>Key-Value Engine</h4>
                    </div>
                    <div class="card-body">
                        <p>A simple secret storage engine that stores arbitrary secrets:</p>
                        <ul class="list-unstyled text-start">
                            <li>✓ Version control for secrets</li>
                            <li>✓ Store configuration, API keys</li>
                            <li>✓ Simple key-value pairs</li>
                            <li>✓ Supports versioning (v1 and v2)</li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h4>Database Engine</h4>
                    </div>
                    <div class="card-body">
                        <h5>Static Credentials</h5>
                        <ul class="list-unstyled text-start mb-3">
                            <li>✓ Fixed username/password</li>
                            <li>✓ Long-term database access</li>
                            <li>✓ Managed by Vault</li>
                        </ul>
                        <h5>Dynamic Credentials</h5>
                        <ul class="list-unstyled text-start">
                            <li>✓ On-demand credentials</li>
                            <li>✓ Automatic credential rotation</li>
                            <li>✓ Time-based access control</li>
                            <li>✓ Enhanced security</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
