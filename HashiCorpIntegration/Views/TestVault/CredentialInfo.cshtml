@model HashiCorpIntegration.Controllers.CredentialInfoViewModel
@{
    ViewData["Title"] = "Credential Info";
}

<div class="container mt-4">
    <h2>Credential Info</h2>

    @if (Model.Success)
    {
        <div class="alert alert-success">
            <strong>Username:</strong> @Model.Username <br />
            <strong>Vault Generated:</strong> @(Model.IsVaultGenerated ? "Yes" : "No") <br />
            <strong>Retrieved At:</strong> @Model.RetrievedAt
        </div>
    }
    else
    {
        <div class="alert alert-danger">
            <strong>Error:</strong> @Model.Error
        </div>
    }
</div>
