@using System.Text.Json
@model HashiCorpIntegration.Controllers.VaultTestResultViewModel
@{
    ViewData["Title"] = "Vault Integration Test";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="mb-0">
                    <i class="fas fa-shield-alt me-2"></i>
                    Vault Integration Test
                </h2>
                <button class="btn btn-outline-primary" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-1"></i>
                    Refresh Test
                </button>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Vault Connection Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-primary text-white d-flex align-items-center">
                    <i class="fas fa-vault me-2"></i>
                    <h5 class="mb-0">Vault Connection</h5>
                </div>
                <div class="card-body">
                    @if (Model.VaultConnectionSuccess)
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <div>
                                <strong>Connection Successful!</strong>
                                <br>
                                <small class="text-muted">Dynamic credentials retrieved from Vault</small>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Connection Details:</h6>
                            <div class="bg-light p-3 rounded">
                                <small class="font-monospace text-break">@Model.VaultConnectionString</small>
                            </div>
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>
                                    Credentials cached for 50 minutes
                                </small>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>
                                <strong>Connection Failed!</strong>
                                <br>
                                <small>@Model.VaultError</small>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Troubleshooting:</h6>
                            <ul class="list-unstyled small">
                                <li><i class="fas fa-arrow-right me-1"></i> Check Vault server is running</li>
                                <li><i class="fas fa-arrow-right me-1"></i> Verify token authentication</li>
                                <li><i class="fas fa-arrow-right me-1"></i> Confirm database role configuration</li>
                            </ul>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="row text-center">
                        <div class="col">
                            <div class="badge @(Model.VaultConnectionSuccess ? "bg-success" : "bg-danger")">
                                @(Model.VaultConnectionSuccess ? "HEALTHY" : "ERROR")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Database Connection Card -->
        <div class="col-md-6 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-header bg-info text-white d-flex align-items-center">
                    <i class="fas fa-database me-2"></i>
                    <h5 class="mb-0">Database Connection</h5>
                </div>
                <div class="card-body">
                    @if (Model.DatabaseConnectionSuccess)
                    {
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="fas fa-check-circle me-2"></i>
                            <div>
                                <strong>Connection Successful!</strong>
                                <br>
                                <small class="text-muted">Database is accessible and ready</small>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Connection Status:</h6>
                            <div class="d-flex justify-content-between">
                                <span><i class="fas fa-server me-1"></i> Server:</span>
                                <span class="font-monospace">SQL Server</span>
                            </div>
                            <div class="d-flex justify-content-between">
                                <span><i class="fas fa-plug me-1"></i> Status:</span>
                                <span class="text-success">Connected</span>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>
                                <strong>Connection Failed!</strong>
                                <br>
                                <small>@Model.DatabaseError</small>
                            </div>
                        </div>

                        <div class="mt-3">
                            <h6 class="text-muted mb-2">Possible Issues:</h6>
                            <ul class="list-unstyled small">
                                <li><i class="fas fa-arrow-right me-1"></i> Database credentials expired</li>
                                <li><i class="fas fa-arrow-right me-1"></i> Network connectivity issues</li>
                                <li><i class="fas fa-arrow-right me-1"></i> Database permissions insufficient</li>
                            </ul>
                        </div>
                    }
                </div>
                <div class="card-footer bg-light">
                    <div class="row text-center">
                        <div class="col">
                            <div class="badge @(Model.DatabaseConnectionSuccess ? "bg-success" : "bg-danger")">
                                @(Model.DatabaseConnectionSuccess ? "CONNECTED" : "DISCONNECTED")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Overall Status Row -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0">
                <div class="card-body text-center py-4">
                    @if (Model.VaultConnectionSuccess && Model.DatabaseConnectionSuccess)
                    {
                        <div class="text-success mb-3">
                            <i class="fas fa-check-circle" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="text-success mb-2">System Integration Successful</h4>
                        <p class="text-muted">Both Vault and Database connections are working properly. Your application is ready to use dynamic database credentials.</p>

                        <div class="mt-4">
                            <a href="@Url.Action("TestQuery", "TestVault")" class="btn btn-success me-2">
                                <i class="fas fa-play me-1"></i>
                                Test Database Query
                            </a>
                            <a href="@Url.Action("CredentialInfo", "TestVault")" class="btn btn-outline-info">
                                <i class="fas fa-info-circle me-1"></i>
                                View Credential Details
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-warning mb-3">
                            <i class="fas fa-exclamation-triangle" style="font-size: 3rem;"></i>
                        </div>
                        <h4 class="text-warning mb-2">Partial System Failure</h4>
                        <p class="text-muted">Some components are not working properly. Please check the individual connection status above.</p>

                        <div class="mt-4">
                            <button class="btn btn-warning" onclick="location.reload()">
                                <i class="fas fa-redo me-1"></i>
                                Retry Connection Test
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Debug Information (only in development) -->
    @if (ViewContext.HttpContext.Request.Query.ContainsKey("debug"))
    {
        <div class="row mt-4">
            <div class="col-12">
                <div class="card border-warning">
                    <div class="card-header bg-warning text-dark">
                        <i class="fas fa-bug me-2"></i>
                        Debug Information
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <h6>Vault Status:</h6>
                                <pre class="bg-light p-2 small">@Html.Raw(JsonSerializer.Serialize(new
                                        {
                                            Success = Model.VaultConnectionSuccess,
                                            Error = Model.VaultError,
                                            ConnectionString = Model.VaultConnectionString?.Substring(0, Math.Min(50, Model.VaultConnectionString?.Length ?? 0)) + "..."
                                        }, new JsonSerializerOptions { WriteIndented = true }))</pre>
                            </div>
                            <div class="col-md-6">
                                <h6>Database Status:</h6>
                                <pre class="bg-light p-2 small">@Html.Raw(JsonSerializer.Serialize(new
                                        {
                                            Success = Model.DatabaseConnectionSuccess,
                                            Error = Model.DatabaseError
                                        }, new JsonSerializerOptions { WriteIndented = true }))</pre>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Add Font Awesome for icons -->
@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <script>
        // Auto-refresh every 5 minutes to check connection status
        setTimeout(function() {
            if (confirm('Connection status may have changed. Refresh to check latest status?')) {
                location.reload();
            }
        }, 300000); // 5 minutes

        // Add loading spinner on refresh button click
        document.querySelector('button[onclick="location.reload()"]').addEventListener('click', function() {
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Refreshing...';
            this.disabled = true;
        });
    </script>
}