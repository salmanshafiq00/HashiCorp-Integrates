@using HashiCorpIntegration.src.Models
@model KvSecretDetailViewModel
@{
    ViewData["Title"] = "Secret Details - " + Model.Path;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 mx-auto">
            <div class="card">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-key"></i> Secret Details
                    </h4>
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("UpdateSecret", new { path = Model.Path })" class="btn btn-light btn-sm">
                            <i class="fas fa-edit"></i> Edit
                        </a>
                        <form asp-action="DeleteSecret" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this secret?')">
                            <input type="hidden" name="path" value="@Model.Path" />
                            <button type="submit" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i> Delete
                            </button>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Success)
                    {
                        <div class="row mb-3">
                            <div class="col-sm-3 fw-bold">Path:</div>
                            <div class="col-sm-9">
                                <code class="text-primary">@Model.Path</code>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3 fw-bold">Retrieved At:</div>
                            <div class="col-sm-9">@Model.RetrievedAt.ToString("yyyy-MM-dd HH:mm:ss")</div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-sm-3 fw-bold">Total Keys:</div>
                            <div class="col-sm-9">
                                <span class="badge bg-info">@Model.Data.Count</span>
                            </div>
                        </div>

                        <hr>

                        @if (Model.Data.Any())
                        {
                            <h5 class="mb-3">
                                <i class="fas fa-list"></i> Key-Value Pairs
                            </h5>

                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>Key</th>
                                            <th>Value</th>
                                            <th width="120">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var kvp in Model.Data.OrderBy(d => d.Key))
                                        {
                                            <tr>
                                                <td class="fw-bold">@kvp.Key</td>
                                                <td>
                                                    <div class="input-group">
                                                        <input type="password" class="form-control"
                                                               id="value_@kvp.Key" value="@kvp.Value" readonly>
                                                        <button class="btn btn-outline-secondary" type="button"
                                                                onclick="togglePassword('value_@kvp.Key', this)"
                                                                title="Show/Hide Value">
                                                            <i class="fas fa-eye"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                                <td>
                                                    <form asp-action="DeleteSecretKey" method="post" class="d-inline"
                                                          onsubmit="return confirm('Are you sure you want to delete this key?')">
                                                        <input type="hidden" name="path" value="@Model.Path" />
                                                        <input type="hidden" name="key" value="@kvp.Key" />
                                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                                title="Delete this key">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <!-- Add New Key Form -->
                            <div class="card mt-4">
                                <div class="card-header">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-plus"></i> Add New Key
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <form asp-action="AddSecretKey" method="post">
                                        <input type="hidden" name="path" value="@Model.Path" />
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="key" class="form-label">Key</label>
                                                    <input type="text" class="form-control" name="key" id="key" required>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="value" class="form-label">Value</label>
                                                    <input type="text" class="form-control" name="value" id="value">
                                                </div>
                                            </div>
                                            <div class="col-md-2">
                                                <div class="form-group">
                                                    <label class="form-label">&nbsp;</label>
                                                    <button type="submit" class="btn btn-primary d-block">
                                                        <i class="fas fa-plus"></i> Add
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-inbox fa-3x"></i>
                                <p class="mt-3">No keys found in this secret</p>

                                <!-- Add First Key Form -->
                                <div class="card mt-4">
                                    <div class="card-header">
                                        <h6 class="card-title mb-0">
                                            <i class="fas fa-plus"></i> Add First Key
                                        </h6>
                                    </div>
                                    <div class="card-body">
                                        <form asp-action="AddSecretKey" method="post">
                                            <input type="hidden" name="path" value="@Model.Path" />
                                            <div class="row justify-content-center">
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" name="key" placeholder="Key" required>
                                                </div>
                                                <div class="col-md-4">
                                                    <input type="text" class="form-control" name="value" placeholder="Value">
                                                </div>
                                                <div class="col-md-2">
                                                    <button type="submit" class="btn btn-primary">
                                                        <i class="fas fa-plus"></i> Add
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <i class="fas fa-exclamation-circle"></i>
                            <strong>Error:</strong> @Model.Error
                        </div>
                    }
                </div>
                <div class="card-footer text-center">
                    <a href="@Url.Action("Index")" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to Dashboard
                    </a>
                    <a href="@Url.Action("UpdateSecret", new { path = Model.Path })" class="btn btn-primary ms-2">
                        <i class="fas fa-edit"></i> Edit Secret
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function togglePassword(inputId, button) {
        const input = document.getElementById(inputId);
        const icon = button.querySelector('i');

        if (input.type === 'password') {
            input.type = 'text';
            icon.classList.remove('fa-eye');
            icon.classList.add('fa-eye-slash');
        } else {
            input.type = 'password';
            icon.classList.remove('fa-eye-slash');
            icon.classList.add('fa-eye');
        }
    }
</script>

<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">